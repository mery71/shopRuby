<%= flash_messages %>
<h2>Products List</h2>
<div class="product-block">
  <table class="table table-striped table-bordered table-hover ">
    <thead>
      <tr>
      <th class="col-md-2 text-center">Name</th>
    	<th class="col-md-1 text-center">Price</th>
      <th class="col-md-2 text-center">Creator</th>
    	<th class="col-md-3 text-center">Options</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
      	  <td class="col-md-2"><%= product.name %></td> 
      	  <td class="col-md-1 text-right">$<%= product.price %></td>
          <td class="col-md-2"><%= product.user.try (:email) %></td>
      	  <td class="col-md-3">
            <%= link_to 'Show', product_path(product), class: "btn btn-info" %>
            <%= link_to 'Edit', edit_product_path(product), class: "btn  btn-warning" %>
            <%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      	  </td>
    	 </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div>
<%= link_to 'New Product', new_product_path, class: "btn btn-success" %>
</div>